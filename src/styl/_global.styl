/* ==========================================================================
    GLOBAL
   ========================================================================== */

*,
*:before,
*:after {
  box-sizing: border-box;
}

body,
html {
  margin: 0;
  padding: 0;
  font-size: 100%;
}

/*
 * Clearfix hack by Nicolas Gallagher
 * Link: http://nicolasgallagher.com/micro-clearfix-hack/
 */

.clearfix:before,
.clearfix:after {
  display: table;
  content: " ";
}

.clearfix:after {
  clear: both;
}

body {
  font-family: $font-primary;
  color: $saiku;
}

a {
  color: #f0f0f0;
  text-decoration: none;
}

a:hover {
  color: $black;
}

.hide {
  display: none !important;
}

.show {
  display: block !important;
}
